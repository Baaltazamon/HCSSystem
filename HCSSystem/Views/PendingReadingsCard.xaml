<UserControl x:Class="HCSSystem.Views.PendingReadingsCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             >

    <materialDesign:Card Padding="16" materialDesign:ShadowAssist.ShadowAnimationDuration="1">
        <StackPanel>
            <TextBlock Text="Неподтверждённые показания"
                       FontWeight="Bold"
                       FontSize="14" TextWrapping="Wrap"
                       Margin="0,0,0,8" TextAlignment="Center"/>
            <TextBlock Text="{Binding Count}" 
                       FontSize="36" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center" 
                       Foreground="#FF2196F3" />
        </StackPanel>
    </materialDesign:Card>
</UserControl>